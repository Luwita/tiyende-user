<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adpt_search_result_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    android:padding="8dp">

    <ImageView
        android:id="@+id/search_result_icon"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_tint"
        android:src="@drawable/ic_location_24"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/location_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center|right"
        android:singleLine="true"
        android:text="@string/search_result_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_avg_distance"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="@+id/search_result_icon"
        app:layout_constraintStart_toEndOf="@+id/search_result_icon"
        app:layout_constraintBottom_toTopOf="@+id/location_desc_tv"
        android:textColor="@color/textheader" />

    <TextView
        android:id="@+id/location_desc_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center|right"
        android:singleLine="true"
        android:text="@string/no_search_result_add"
        android:textColor="@color/textchild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_title_tv"
        app:layout_constraintStart_toStartOf="@+id/location_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_icon"/>

    <TextView
        android:id="@+id/tv_avg_distance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:singleLine="true"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/location_title_tv"/>


